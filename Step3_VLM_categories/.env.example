# --- REQUIRED ---
FOLDERPATH=/path/to/images
BASE_URL=https://api.openai.com/v1
MODEL=gpt-4o-mini
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

MAX_COMPLETION_TOKENS=500
TEMPERATURE=0.0
SEED=42


# Option A: Excel/CSV-driven
# CATEGORIES_EXCEL_PATH=/path/to/categories.xlsx
# CATEGORIES_COLUMN_LABEL=Categories   # optional if not first column

# Option B: list override
# CATEGORIES=PlantPresence,Greenness,NaturalLightExposure

# Option C: single override
CATEGORY=PlantPresence



# --- OUTPUTS ---
OUTPUT_DIR=/path/to/outputs

# --- MEMORY & THROUGHPUT KNOBS ---
MAX_CONCURRENCY=12
PER_IMAGE_JOBS_CONCURRENCY=1

# longest-side cap (0 = no resize)
MAX_IMAGE_SIZE=1280
JPEG_QUALITY=85

CONVERT_TO_EXCEL=True
PROGRESS_REFRESH_INTERVAL=0.5
DELETE_ORIGINALS=False

# --- OPTIONAL: COST ESTIMATION (USD per 1K tokens) ---
#PROMPT_COST_PER_1K=2.50
#COMPLETION_COST_PER_1K=10.00

# --- OPTIONAL: experiment metadata output (off by default) ---
WRITE_EXPERIMENT_METADATA=False
#EXPERIMENT_NAME=baseline-longest-1280
#EXPERIMENT_NOTES=pyvips on, 12 workers, size 1280
